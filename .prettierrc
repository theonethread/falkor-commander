{
    "trailingComma": "none",
    "printWidth": 120,
    "tabWidth": 4,
    "overrides": [
        {
            "files": ["*.html", "*.json", "*.jsonc", "*.yml"],
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": "*.md",
            "options": {
                "proseWrap": "never"
            }
        }
    ]
}
